<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.droid.omega.easepay.PasswordResetFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Please Enter your new password"
            android:layout_marginBottom="20dp"/>

        <View
            style="@style/Divider"
            />

        <EditText
            android:id="@+id/new_resetPassword"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:hint="Enter New password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:layout_below="@+id/old_password"
            android:typeface="monospace"
            android:background="@drawable/edittext_border"
            android:layout_marginBottom="20dp"/>
        <EditText
            android:id="@+id/new_resetPassword2"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:hint="Re-enter New password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:layout_below="@+id/new_password"
            android:typeface="monospace"
            android:background="@drawable/edittext_border"
            android:layout_marginBottom="20dp"/>
        <Button
            android:id="@+id/submit_resetPassword_btn"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_submit"
            android:background="@color/main_btn"
            android:layout_marginTop="10dp"
            android:textColor="@color/windowBackground"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>

    <!-- TODO: Update blank fragment layout -->


</ScrollView>
